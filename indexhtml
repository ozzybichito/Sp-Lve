            <section class="song-list-section hidden-view" id="favorites-view">
                <h2>Mi Lista Favorita‚ù§Ô∏è</h2>
                <div id="favorite-playlist">
                    <p id="no-favorites-message" style="text-align: center; color: var(--text-muted); margin-top: 20px;">
                        Todav√≠a no tienes canciones favoritas. ¬°Agrega algunas desde "Inicio"! üéß‚ú®
                    </p>
                </div>
            </section>

            <section class="about-section hidden-view" id="about-view">
                <h2>Sobre SpotyLove üé∂</h2>
                <p>Este es un reproductor de m√∫sica personalizado, creado exclusivamente para ti y tu pareja. Elige sus canciones favoritas para construir la lista musical de su historia de amor. üíñ</p>
                <p>Servicio ofrecido por: @ozzy.bichito</p>
                <p>¬øQuieres una playlist personalizada o tienes alguna consulta? ¬°Cont√°ctame directamente! üëá</p>
                <a href="intent://send/5192196732#Intent;scheme=whatsapp;package=com.whatsapp;action=android.intent.action.VIEW;end"" target="_blank" class="whatsapp-btn">
                    <i class="fab fa-whatsapp"></i> Contactar por WhatsApp
                </a>
            </section>

        </main>

        <footer class="player-controls">
            <div class="player-info">
                <img id="player-cover" src="https://ia903102.us.archive.org/3/items/abstract-letter-dj-logo-design-with-line-connection-for-technology-and-digital-b/abstract-letter-dj-logo-design-with-line-connection-for-technology-and-digital-business-company-vector.jpg" alt="Logo de DJ">
                <div>
                    <h4 id="player-title">Selecciona una canci√≥n</h4>
                    <p id="player-artist"></p>
                </div>
            </div>
            <div class="player-buttons">
                <i class="fas fa-backward" id="prev-btn"></i>
                <i class="fas fa-play play-pause-btn" id="play-pause-btn"></i>
                <i class="fas fa-forward" id="next-btn"></i>
            </div>
            <div class="progress-bar-container">
                <span class="time-display" id="current-time">0:00</span>
                <div class="progress-bar" id="progress-bar">
                    <div class="progress" id="progress"></div>
                </div>
                <span class="time-display" id="duration-time">0:00</span>
            </div>
            <div class="volume-control">
                <i class="fas fa-volume-up" id="volume-icon"></i>
                <input type="range" id="volume-slider" class="volume-slider" min="0" max="1" step="0.01" value="0.7">
            </div>
            <audio id="audio-player" preload="metadata"></audio>
        </footer>
    </div>

    <script>
        const audioPlayer = document.getElementById('audio-player');
        const playPauseBtn = document.getElementById('play-pause-btn');
        const prevBtn = document.getElementById('prev-btn');
        const nextBtn = document.getElementById('next-btn');
        const progressBar = document.getElementById('progress-bar');
        const progress = document.getElementById('progress');
        const currentTimeDisplay = document.getElementById('current-time');
        const durationTimeDisplay = document.getElementById('duration-time');
        const volumeSlider = document.getElementById('volume-slider');
        const volumeIcon = document.getElementById('volume-icon');
        const playerTitle = document.getElementById('player-title');
        const playerArtist = document.getElementById('player-artist');
        const playerCover = document.getElementById('player-cover');
        const playlistContainer = document.getElementById('playlist');
        const favoritePlaylistContainer = document.getElementById('favorite-playlist');
        const noFavoritesMessage = document.getElementById('no-favorites-message');
        const navLinks = document.querySelectorAll('.nav-link');
        const mainContentSections = document.querySelectorAll('.main-content .song-list-section, .main-content .about-section');
        const headerSection = document.querySelector('.header-section');
        const bannerSection = document.querySelector('.banner-section');

        let currentSongIndex = -1;
        let allSongs = [];
        let currentPlaylist = []; // Esta ser√° la playlist que el reproductor usa para next/prev

        const DEFAULT_PLAYER_COVER_IMAGE = 'https://ia903102.us.archive.org/3/items/abstract-letter-dj-logo-design-with-line-connection-for-technology-and-digital-b/abstract-letter-dj-logo-design-with-line-connection-for-technology-and-digital-business-company-vector.jpg';
        const DEFAULT_SONG_COVER_PLACEHOLDER = 'https://archive.org/download/1751834540/1751834540.png';

        let favorites = JSON.parse(localStorage.getItem('favoriteSongs')) || [];

        // --- Funciones de Gesti√≥n de Vistas ---
        function showView(viewId) {
            mainContentSections.forEach(section => {
                section.classList.add('hidden-view');
                section.classList.remove('active-view');
            });

            const targetView = document.getElementById(viewId + '-view');
            if (targetView) {
                targetView.classList.remove('hidden-view');
                targetView.classList.add('active-view');
                document.querySelector('.main-content').scrollTop = 0;
                if (targetView.id === 'all-songs-view' || targetView.id === 'favorites-view') {
                    const scrollableDiv = targetView.querySelector('div[id$="-playlist"]');
                    if (scrollableDiv) {
                        scrollableDiv.scrollTop = 0;
                    }
                }
            }

            navLinks.forEach(link => {
                link.classList.remove('active');
                if (link.dataset.view === viewId) {
                    link.classList.add('active');
                }
            });

            // Actualizar la playlist activa seg√∫n la vista
            if (viewId === 'all-songs') {
                currentPlaylist = [...allSongs]; // Clonar para evitar modificar allSongs directamente
                headerSection.classList.remove('hidden-view');
                bannerSection.classList.remove('hidden-view');
            } else if (viewId === 'favorites') {
                updateFavoritesView(); // Asegura que la vista de favoritos est√© actualizada
                currentPlaylist = allSongs.filter(song => favorites.includes(song.id));
                headerSection.classList.remove('hidden-view');
                bannerSection.classList.remove('hidden-view');
            } else if (viewId === 'about') {
                currentPlaylist = []; // No hay playlist activa para 'Acerca de'
                headerSection.classList.add('hidden-view');
                bannerSection.classList.add('hidden-view');
            }
        }

        // --- Funciones de Gesti√≥n de Favoritos ---
        function toggleFavorite(songId) {
            const index = favorites.indexOf(songId);
            if (index > -1) {
                favorites.splice(index, 1);
            } else {
                favorites.push(songId);
            }
            localStorage.setItem('favoriteSongs', JSON.stringify(favorites));
            updateFavoriteIcons(); // Actualiza los iconos en todas las tarjetas
            // Solo actualiza la vista de favoritos si est√° activa
            if (document.getElementById('favorites-view').classList.contains('active-view')) {
                updateFavoritesView(); // Llama a showView para recrear la lista de favoritos
            }
        }

        function updateFavoriteIcons() {
            document.querySelectorAll('.favorite-icon').forEach(icon => {
                const songId = icon.dataset.id;
                if (favorites.includes(songId)) {
                    icon.classList.remove('far');
                    icon.classList.add('fas');
                } else {
                    icon.classList.remove('fas');
                    icon.classList.add('far');
                }
            });
        }

        function updateFavoritesView() {
            favoritePlaylistContainer.innerHTML = ''; // Limpiar la vista de favoritos

            const favoriteSongs = allSongs.filter(song => favorites.includes(song.id));

            if (favoriteSongs.length === 0) {
                noFavoritesMessage.style.display = 'block';
            } else {
                noFavoritesMessage.style.display = 'none';
                favoriteSongs.forEach(song => {
                    const songCard = document.createElement('div');
                    songCard.classList.add('song-card');
                    songCard.dataset.id = song.id;
                    songCard.dataset.src = song.src;
                    songCard.dataset.title = song.title;
                    songCard.dataset.artist = song.artist;
                    songCard.dataset.cover = song.cover;

                    songCard.innerHTML = `
                        <img src="${song.cover || DEFAULT_SONG_COVER_PLACEHOLDER}" alt="Cover ${song.title}">
                        <div class="song-info">
                            <h3>${song.title}</h3>
                            <p>${song.artist}</p>
                        </div>
                        <div class="actions">
                            <i class="far fa-heart favorite-icon" data-id="${song.id}"></i>
                        </div>
                    `;
                    favoritePlaylistContainer.appendChild(songCard);
                });
                // Importante: Volver a aplicar los event listeners a las nuevas tarjetas de favoritos
                addSongCardEventListeners(favoritePlaylistContainer);
            }
            updateFavoriteIcons(); // Asegurarse de que los iconos de favoritos est√©n correctos en la vista de favoritos
        }

        // --- Funciones del Reproductor ---
        function loadSong(index) {
            if (currentPlaylist.length === 0 || index < 0 || index >= currentPlaylist.length) {
                // Si no hay canciones o el √≠ndice es inv√°lido, resetear el reproductor
                playerTitle.textContent = 'Selecciona una canci√≥n';
                playerArtist.textContent = '';
                playerCover.src = DEFAULT_PLAYER_COVER_IMAGE;
                playPauseBtn.classList.replace('fa-pause', 'fa-play');
                audioPlayer.src = '';
                audioPlayer.currentTime = 0;
                progress.style.width = '0%';
                currentTimeDisplay.textContent = '0:00';
                durationTimeDisplay.textContent = '0:00';
                currentSongIndex = -1; // Resetear el √≠ndice
                return;
            }

            currentSongIndex = index;
            const song = currentPlaylist[currentSongIndex];
            audioPlayer.src = song.src;
            playerTitle.textContent = song.title;
            playerArtist.textContent = song.artist;
            playerCover.src = song.cover || DEFAULT_SONG_COVER_PLACEHOLDER;
            audioPlayer.load(); // Cargar la nueva fuente de audio
            playSong(); // Intentar reproducir autom√°ticamente la nueva canci√≥n
        }

        function playSong() {
            if (audioPlayer.src) {
                const playPromise = audioPlayer.play();
                if (playPromise !== undefined) {
                    playPromise.then(() => {
                        playPauseBtn.classList.replace('fa-play', 'fa-pause');
                    })
                    .catch(error => {
                        console.warn("Reproducci√≥n autom√°tica bloqueada o error en la reproducci√≥n:", error);
                        playPauseBtn.classList.replace('fa-pause', 'fa-play');
                        // Puedes a√±adir un mensaje al usuario aqu√≠ si quieres, por ejemplo:
                        // alert("Para reproducir, por favor haga clic en el bot√≥n de Play.");
                    });
                }
            } else if (currentPlaylist.length > 0) {
                // Si no hay src, pero hay canciones en la playlist, cargar la primera
                loadSong(0);
            }
        }

        function pauseSong() {
            audioPlayer.pause();
            playPauseBtn.classList.replace('fa-pause', 'fa-play');
        }

        function togglePlayPause() {
            if (audioPlayer.paused) {
                playSong();
            } else {
                pauseSong();
            }
        }

        function nextSong() {
            if (currentPlaylist.length === 0) {
                loadSong(-1); // Resetear si no hay canciones
                return;
            }
            currentSongIndex = (currentSongIndex + 1) % currentPlaylist.length;
            loadSong(currentSongIndex);
        }

        function prevSong() {
            if (currentPlaylist.length === 0) {
                loadSong(-1); // Resetear si no hay canciones
                return;
            }
            currentSongIndex = (currentSongIndex - 1 + currentPlaylist.length) % currentPlaylist.length;
            loadSong(currentSongIndex);
        }

        function formatTime(seconds) {
            const minutes = Math.floor(seconds / 60);
            const secs = Math.floor(seconds % 60);
            return `${minutes}:${secs < 10 ? '0' : ''}${secs}`;
        }

        // Agrega event listeners a las tarjetas de canciones
        function addSongCardEventListeners(container) {
            container.querySelectorAll('.song-card').forEach(card => {
                // Asegurarse de no a√±adir duplicados si ya existen
                card.removeEventListener('click', handleSongCardClick);
                card.addEventListener('click', handleSongCardClick);
            });
        }

        function handleSongCardClick(e) {
            const songCard = e.currentTarget; // e.currentTarget es el elemento al que se le a√±adi√≥ el listener (song-card)

            // Si el clic es en el icono de favorito, manejarlo por separado
            if (e.target.classList.contains('favorite-icon')) {
                const songId = e.target.dataset.id;
                toggleFavorite(songId);
            } else {
                // Si el clic es en cualquier otra parte de la tarjeta, reproducir la canci√≥n
                const songIdToPlay = songCard.dataset.id;
                const clickedIndex = currentPlaylist.findIndex(song => song.id === songIdToPlay);

                if (clickedIndex !== -1) {
                    loadSong(clickedIndex); // Carga y reproduce la canci√≥n
                }
            }
        }

        // --- Inicializaci√≥n y Event Listeners Globales ---
        document.addEventListener('DOMContentLoaded', () => {
            // Cargar todas las canciones del HTML una vez al inicio
            document.querySelectorAll('#playlist .song-card').forEach(card => {
                allSongs.push({
                    id: card.dataset.id,
                    src: card.dataset.src,
                    title: card.dataset.title,
                    artist: card.dataset.artist,
                    cover: card.dataset.cover
                });
            });

            // Inicializar la playlist actual con todas las canciones
            currentPlaylist = [...allSongs];

            // Mostrar la vista inicial (Todas las Canciones)
            showView('all-songs');
            updateFavoriteIcons(); // Asegurarse de que los iconos de favoritos est√©n correctos al cargar la p√°gina

            // Inicializar el reproductor al estado por defecto
            playerTitle.textContent = 'Selecciona una canci√≥n';
            playerArtist.textContent = '';
            playerCover.src = DEFAULT_PLAYER_COVER_IMAGE;
            playPauseBtn.classList.replace('fa-pause', 'fa-play');
            audioPlayer.src = '';
            audioPlayer.currentTime = 0;
            progress.style.width = '0%';
            currentTimeDisplay.textContent = '0:00';
            durationTimeDisplay.textContent = '0:00';

            // Agregar event listeners a las tarjetas de canciones iniciales
            addSongCardEventListeners(playlistContainer);

            // Event listeners de controles del reproductor
            playPauseBtn.addEventListener('click', togglePlayPause);
            prevBtn.addEventListener('click', prevSong);
            nextBtn.addEventListener('click', nextSong);

            audioPlayer.addEventListener('timeupdate', () => {
                if (audioPlayer.duration) {
                    const progressPercent = (audioPlayer.currentTime / audioPlayer.duration) * 100;
                    progress.style.width = `${progressPercent}%`;
                    currentTimeDisplay.textContent = formatTime(audioPlayer.currentTime);
                }
            });

            audioPlayer.addEventListener('loadedmetadata', () => {
                if (audioPlayer.duration) {
                    durationTimeDisplay.textContent = formatTime(audioPlayer.duration);
                } else {
                    durationTimeDisplay.textContent = '0:00';
                }
            });

            audioPlayer.addEventListener('ended', () => {
                nextSong();
            });

            progressBar.addEventListener('click', (e) => {
                if (audioPlayer.duration) {
                    const clickX = e.offsetX;
                    const progressBarWidth = progressBar.clientWidth;
                    const seekTime = (clickX / progressBarWidth) * audioPlayer.duration;
                    audioPlayer.currentTime = seekTime;
                }
            });

            volumeSlider.addEventListener('input', () => {
                audioPlayer.volume = volumeSlider.value;
                if (audioPlayer.volume === 0) {
                    volumeIcon.classList.replace('fa-volume-up', 'fa-volume-mute');
                } else {
                    volumeIcon.classList.replace('fa-volume-mute', 'fa-volume-up');
                }
            });

            volumeIcon.addEventListener('click', () => {
                if (audioPlayer.muted) {
                    audioPlayer.muted = false;
                    volumeIcon.classList.replace('fa-volume-mute', 'fa-volume-up');
                    volumeSlider.value = audioPlayer.volume === 0 ? 0.7 : audioPlayer.volume;
                } else {
                    audioPlayer.muted = true;
                    volumeIcon.classList.replace('fa-volume-up', 'fa-volume-mute');
                    volumeSlider.value = 0;
                }
            });

            // Delegar clics en enlaces de navegaci√≥n de la sidebar
            document.querySelector('.sidebar ul').addEventListener('click', (e) => {
                const link = e.target.closest('.nav-link');
                if (link) {
                    e.preventDefault();
                    const viewId = link.dataset.view;
                    showView(viewId);
                }
            });
        });
    </script>
</body>
</html>
